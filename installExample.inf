;github.com/MY1L/TinyHand

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"

[Scheme.Cur]
beam.ani
busy.ani
cross.cur
ew.cur
hand.cur
helpsel.cur
link.cur
move.cur
nesw.cur
ns.cur
nwse.cur
pen.ani
unavail.cur
up.cur
working.ani

[Strings]
CUR_DIR     = "Cursors\Thinking"
SCHEME_NAME = "Thinking"
alternate   = "up.cur"
busy    = "busy.ani"
cross   = "cross.cur"
dgn1    = "nwse.cur"
dgn2    = "nesw.cur"
hand    = "pen.ani"
help    = "helpsel.cur"
horz    = "ew.cur"
link    = "link.cur"
move    = "move.cur"
pointer = "hand.cur"
text    = "beam.ani"
unavailiable = "unavail.cur"
vert    = "ns.cur"
work    = "working.ani"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%Cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%Unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"